<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/margin"
    android:paddingEnd="@dimen/margin_between_elements"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <LinearLayout
        android:id="@+id/idea_name_layout"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.65"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idea_name_text_view"
            style="@style/Widget.Inventory.ListItemTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:textSize="20dp"
            android:layout_marginVertical="@dimen/margin"
            tools:text="Black Tap" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idea_distance_layout"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.35"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idea_distance_text_view"
            style="@style/Widget.Inventory.ListItemTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginVertical="@dimen/margin"
            tools:text="1.5km" />
    </LinearLayout>
</LinearLayout>
